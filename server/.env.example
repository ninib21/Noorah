# NannyRadar Production Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nannyradar_prod
DB_USER=nannyradar_user
DB_PASSWORD=your_secure_password_here

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_random

# Stripe Configuration (Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@nannyradar.com
SUPPORT_EMAIL=support@nannyradar.com

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
FIREBASE_SERVER_KEY=your_firebase_server_key_here

# App Configuration
APP_NAME=NannyRadar
APP_URL=https://nannyradar.com
FRONTEND_URL=https://app.nannyradar.com

# Feature Flags
ENABLE_VOICE_ASSISTANT=true
ENABLE_SMART_PRICING=true
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
